<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="27dp"
    android:background="#000000">

    <TextView
        android:id="@+id/placeName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        tools:text="식물바"
        android:textSize="20dp"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/category_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        tools:text="카테고리 명"
        android:textSize="12sp"
        android:gravity="center|left"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/placeName_txt"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/roadAddressName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:textColor="#ffffff"
        android:textSize="12sp"
        tools:text="주소명"
        app:layout_constraintLeft_toRightOf="@+id/category_txt"
        app:layout_constraintTop_toBottomOf="@+id/placeName_txt"/>

    <TextView
        android:id="@+id/memo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:textColor="#ffffff"
        android:textSize="12sp"
        tools:text="메모"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_txt"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#101010"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>