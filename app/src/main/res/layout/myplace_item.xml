<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="17dp"
    android:background="@drawable/myplace_list_btn1">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/myplace_category_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/placeName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030303"
            tools:text="장소 명"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center|left"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/myplace_category_img"/>

        <TextView
            android:id="@+id/roadAddressName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="#393d46"
            android:textSize="12dp"
            tools:text="주소명"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/myplace_category_img"
            app:layout_constraintTop_toBottomOf="@+id/placeName_txt"/>

        <TextView
            android:id="@+id/myplace_category_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="#393d46"
            android:textSize="12dp"
            tools:text="카테고리명"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/placeName_txt"
            app:layout_constraintTop_toBottomOf="@+id/placeName_txt"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>