<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_top"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/detail_top_layout1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detail_esc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESC"
            android:textSize="15dp"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detail_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="DEL"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_edit_btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detail_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="EDIT"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/detail_category_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="19dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_esc_btn"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_placeName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 명"
            android:textColor="@color/colorBlack"
            android:textSize="26dp"
            android:textStyle="bold"
            android:letterSpacing="-0.02"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_category_img"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_roadAddressName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도로 주소명"
            android:textSize="15dp"
            android:textColor="#101010"
            android:letterSpacing="-0.04"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_placeName_txt"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:visibility="gone"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/detail_top"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_memo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#d8d8d6"
        android:letterSpacing="-0.04"
        android:text="메모"
        android:gravity="center|left"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="16.5dp"
        android:layout_marginRight="42.5dp"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_time_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#696969"
        android:letterSpacing="-0.04"
        android:gravity="center_horizontal"
        tools:text="영업시간"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_memo_txt"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_time_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#d8d8d6"
        android:letterSpacing="-0.04"
        android:gravity="center_horizontal"
        tools:text="09:00 - 21:00"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_time_txt1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_menu_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#696969"
        android:letterSpacing="-0.04"
        android:gravity="center_horizontal"
        tools:text="베스트 메뉴"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_time_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_menu_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#d8d8d6"
        android:letterSpacing="-0.04"
        android:gravity="center_horizontal"
        tools:text="고등어찌개"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_menu_txt1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_menu_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#d8d8d6"
        android:letterSpacing="-0.04"
        android:gravity="center_horizontal"
        tools:text="왕폭탄계란말이"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_menu_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_additional_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#696969"
        android:letterSpacing="-0.04"
        android:gravity="center_horizontal"
        tools:text="부가 정보"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_menu_txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detail_additional_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#d8d8d6"
        android:letterSpacing="-0.04"
        android:gravity="center_horizontal"
        tools:text="주차가능 / 콘센트 O / 24시"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16.5dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_additional_txt1"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>