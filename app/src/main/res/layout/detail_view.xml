<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_top"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/detail_top_layout1">

        <ImageButton
            android:id="@+id/detail_esc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_detail_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/detail_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.5dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ic_detail_delete_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_edit_btn"/>

        <ImageButton
            android:id="@+id/detail_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="19.5dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_detail_edit_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/detail_category_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="19dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_esc_btn"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_placeName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 명"
            android:textColor="@color/colorBlack"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/spoqabold"
            android:letterSpacing="-0.02"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_category_img"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_roadAddressName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도로 주소명"
            android:textSize="15sp"
            android:fontFamily="@font/spoqaregular"
            android:textColor="#101010"
            android:letterSpacing="-0.04"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_placeName_txt"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/detail_top"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/detail_cardview"
                android:layout_width="0dp"
                android:layout_height="214dp"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#101010"
                app:cardCornerRadius="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#101010"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <!--                <ImageView-->
                <!--                    android:id="@+id/detailImg"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"/>-->

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/dotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/detail_cardview"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <ImageView
                    android:id="@+id/dotImageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:visibility="visible"
                    android:src="@drawable/indicator_dot_on" />
                <ImageView
                    android:id="@+id/dotImageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    android:src="@drawable/indicator_dot_off" />
                <ImageView
                    android:id="@+id/dotImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    android:src="@drawable/indicator_dot_off" />
                <ImageView
                    android:id="@+id/dotImageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    android:src="@drawable/indicator_dot_off" />
                <ImageView
                    android:id="@+id/dotImageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    android:src="@drawable/indicator_dot_off" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_mid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/dotsContainer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/detail_memo_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#d8d8d6"
                    android:text="메모를 입력해주세요."
                    android:fontFamily="@font/spoqaregular"
                    android:gravity="center|left"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="16.5dp"
                    android:layout_marginRight="42.5dp"/>

                <TextView
                    android:id="@+id/detail_time_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="@font/spoqabold"
                    android:textColor="#696969"
                    android:gravity="center_horizontal"
                    android:text="영업시간"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16.5dp"/>

                <TextView
                    android:id="@+id/detail_time_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#d8d8d6"
                    android:letterSpacing="-0.04"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/montserratmedium"
                    android:text="등록해주세요"
                    android:visibility="visible"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="16.5dp"
                    />

                <TextView
                    android:id="@+id/detail_menu_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#696969"
                    android:letterSpacing="-0.04"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/spoqabold"
                    android:text="베스트 메뉴"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16.5dp"
                    />

                <TextView
                    android:id="@+id/detail_menu_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#d8d8d6"
                    android:letterSpacing="-0.04"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/spoqaregular"
                    android:text="등록해주세요"
                    android:visibility="visible"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="16.5dp"
                    />

                <TextView
                    android:id="@+id/detail_menu_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#d8d8d6"
                    android:letterSpacing="-0.04"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/spoqaregular"
                    android:text="등록해주세요"
                    android:visibility="gone"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="16.5dp"
                    app:layout_constraintTop_toBottomOf="@+id/detail_menu_txt2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:id="@+id/detail_additional_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#696969"
                    android:letterSpacing="-0.04"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/spoqabold"
                    android:text="부가 정보"
                    android:visibility="visible"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16.5dp"
                    />


                <TextView
                    android:id="@+id/detail_additional_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#d8d8d6"
                    android:letterSpacing="-0.04"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/spoqaregular"
                    android:text="등록해주세요"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16.5dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>



            <ImageView
                android:id="@+id/notVisitImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="44dp"
                android:visibility="visible"
                android:layout_marginBottom="20dp"
                app:layout_constraintDimensionRatio="4:5"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.55"
                app:layout_constraintTop_toBottomOf="@+id/detail_mid"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/detail_bottom"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_myplace_bottom"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="33dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/detail_bottom"
            app:layout_constraintLeft_toLeftOf="@+id/detail_bottom"
            app:layout_constraintRight_toRightOf="@+id/detail_bottom"
            app:layout_constraintBottom_toBottomOf="@+id/detail_bottom">

            <ImageView
                android:id="@+id/detail_insta_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_myplace_insta"/>

            <ImageView
                android:id="@+id/detail_share_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_myplace_share"/>

            <ImageView
                android:id="@+id/detail_findroad_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="@drawable/ic_myplace_findroad"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_popup_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparency"
        android:visibility="gone">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="260dp"
            android:layout_height="196dp"
            android:background="@drawable/drawable_popup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <Space
                android:id="@+id/detail_popup_space1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent="0.58"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/detail_quit_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqaregular"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:text="장소를 삭제하시겠습니까?" />

            <TextView
                android:id="@+id/detail_quit_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqaregular"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_quit_txt1"
                android:textSize="10dp"
                android:textColor="#6b6b6b"
                android:text="지금 돌아가면 장소가 삭제됩니다." />

            <TextView
                android:id="@+id/detail_quit_ok_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqaregular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_popup_space1"
                app:layout_constraintBottom_toTopOf="@id/detail_quit_no_txt"
                android:textSize="15dp"
                android:textColor="#ff2828"
                android:text="삭 제" />

            <TextView
                android:id="@+id/detail_quit_no_txt"
                android:layout_width="wrap_content"
                android:fontFamily="@font/spoqaregular"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_quit_ok_txt"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:text="유 지" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>